                </div>
            </div>
        </div>
    </section>    <!-- Category Cards Section -->



    <section id="category-cards" class="category-cards section">
        <div class="container section-title" data-aos="fade-up">
            <h2>Our Category</h2>
            <p class="faq-description">Explore a wide range of gifts, cards, stationery, handbags, beauty picks, and more all in one place</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row g-4">
                @foreach (var cat in Model.CategoryToDisplay)
                {
                    <div class="col-12 col-sm-6 col-md-3" data-aos="fade-up" data-aos-delay="200">
                        <div class="category-card">
                            <img src="~/categoryImages/@cat.CategoryImage" alt="@cat.CategoryName" class="img-fluid" loading="lazy">
                            <a href="@Url.Action("ProductsByCategory", "Home", new { id = cat.CategoryId })" class="category-link">
                                @cat.CategoryName <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- /Category Cards Section -->
    <!-- /Products Cards Section -->
    <section id="best-sellers" class="best-sellers section">
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Our Products</h2>
            <p class="faq-description">Cards, gifts, bags, beauty, and more — everything you love, all in one store!</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row g-4 justify-content-center">



                      <!-- Card 1 -->
