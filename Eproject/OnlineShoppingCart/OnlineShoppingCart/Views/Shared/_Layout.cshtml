    <script>
                document.addEventListener('DOMContentLoaded', function () {
            const links = document.querySelectorAll('.navmenu ul li a');
            const currentPage = window.location.pathname.toLowerCase();

            // Page load pe current link ko active karo
            links.forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();
                if (linkPath === currentPage) {
                    link.classList.add('active');
                }
            });

            // Click hone pe active class update karo
            links.forEach(link => {
                link.addEventListener('click', function () {
                    links.forEach(l => l.classList.remove('active')); // Sab se active hatao
                    this.classList.add('active'); // Clicked link pe active lagao
                });
            });
        });
 
  
  
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Page load par cart count load karein (agar session mein nahi hai)
            loadCartCount();

            // Agar TempData mein CartUpdated flag hai to count update karein
            @if (TempData["CartUpdated"] != null)
            {
                    <text>
                    setTimeout(function() {
                        loadCartCount()
                    }, 100);
                    </text>
            }

            // Add to cart form submit ke baad page reload hone par ye chalega
            if (performance.navigation.type === performance.navigation.TYPE_BACK_FORWARD) {
                loadCartCount();
            }
        });

        // Cart count load karne ka simple function
        function loadCartCount() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(count => {
                    document.getElementById('cartCount').textContent = count;

                    // Agar count 0 se zyada hai to badge visible karein
                    var badge = document.getElementById('cartCount');
                    if (count > 0) {
                      
                        badge.classList.add('badge-notification');
                    } else {
                        badge.style.display = 'none';
                    }
                })
                .catch(error => {
                    console.log('Error loading cart count:', error);
                });
        }

        // Page visibility change par cart count update karein
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                loadCartCount();
            }
        });

        // Storage event listener (agar multiple tabs open hain)
        window.addEventListener('storage', function(e) {
            if (e.key === 'cartUpdated') {
                loadCartCount();
            }
        });
    </script>
    <script>
            function confirmLogout() {
            // Optional: Confirmation dialog
            return confirm('Are you sure you want to logout?');
