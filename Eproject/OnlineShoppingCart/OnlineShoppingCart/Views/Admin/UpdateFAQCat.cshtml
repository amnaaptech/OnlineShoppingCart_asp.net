@model Faqcategory
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h2 class="text-center mb-1 text-dark fw-bold" style="color: #1a2035;">EditCategory</h2>


        <form method="post"  asp-action="UpdateFAQCat">
            <input asp-for="FcategoryId" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label fw-bold">Category Name</label>
                <input asp-for="Fcategory" type="text" class="form-control" placeholder="Category Name">
            </div>

           



            <div class="d-grid mb-3">
                <button type="submit" class="btn text-white" style="background-color: #1a2035;">Edit Category</button>
            </div>




        </form>
    </div>
</div>



 
