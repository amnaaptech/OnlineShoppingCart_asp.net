@model Faqcategory
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@* /////FAQ *@
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h2 class="text-center mb-1 text-dark fw-bold" style="color: #1a2035;">Add FAQ Category</h2>


        <form asp-action="AddFAQCat" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label fw-bold">Category Name</label>
                <input asp-for="Fcategory" type="text" class="form-control" placeholder="Category Name">
                <span asp-validation-for="Fcategory" class="text-danger"></span>
            </div>


            <div class="d-grid mb-3">
                <button type="submit" class="btn text-white" style="background-color: #1a2035;">Add Category</button>
            </div>




        </form>
    </div>
</div>



