@model IEnumerable<Faqcategory>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@* 
//  SHOW FAQS CATE *@

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold" style="color: #1a2035;">Faq Category</h2>
    <a asp-controller="Admin" asp-action="AddFAQCat" class="btn btn-dark mb-2">Add Category</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center shadow">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FcategoryId</td>
                            <td>@item.Fcategory</td>
                            <td>
                                <a asp-action="UpdateFAQCat" asp-route-id="@item.FcategoryId" class="btn  btn-dark">Edit</a>
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-action="DeleteFAQCat" asp-route-id="@item.FcategoryId" class="btn btn-dark" onclick="return confirm('Are you sure you want to delete this FAQs Category?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No categories found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
  
