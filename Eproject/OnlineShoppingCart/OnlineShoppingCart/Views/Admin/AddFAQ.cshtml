@model FAQsViewmodel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@* /FAQS *@


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h2 class="text-center mb-1 text-dark fw-bold" style="color: #1a2035;">Add FAQ</h2>


        <form method="post"  asp-action="AddFAQ">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            

            <div class="mb-3">
                <label class="form-label fw-bold">Category List</label>
                <select class="form-control" asp-for="FAQ.FcategoryId">
                    <option value="0" disabled selected>Select Faq Category</option>
                    @foreach (var item in Model.CategoryList)
                    {
                        <option value="@item.FcategoryId">@item.Fcategory</option>
                    }
                </select>
                <span asp-validation-for="FAQ.FcategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Question</label>
                <input asp-for="FAQ.Fquestion" type="text" class="form-control">
                <span asp-validation-for="FAQ.Fquestion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Answer</label>
                <input asp-for="FAQ.Fanswer" type="text" class="form-control">
                <span asp-validation-for="FAQ.Fanswer" class="text-danger"></span>
            </div>



            <div class="d-grid mb-3">
                <button type="submit" class="btn text-white" style="background-color: #1a2035;">Add Faq</button>
            </div>




        </form>
    </div>
</div>





