@model List<OnlineShoppingCart.Models.User>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Employees List";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}







<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold" style="color: #1a2035;">Employee List</h2>
    <a asp-controller="Admin" asp-action="AddEmployee" class="btn btn-dark mb-2">Add Employee</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center shadow">
            <thead class="thead-dark">
                <tr>

                    <th>Employee Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>

                        <td>@employee.UserName</td>
                        <td>@employee.UserEmail</td>

                        <td>@employee.Role</td>
                        <td>
                            <a asp-action="DeleteEmployee" asp-route-id="@employee.UserId" class="btn btn-dark" onclick="return confirm('Are you sure you want to delete this employee?');">
                                Delete
                            </a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
